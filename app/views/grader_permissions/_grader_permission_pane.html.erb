<div class='pane-wrapper'>
  <div class='pane'>
    <div id='grader_permission_pane'>
      <%= render partial: 'shared/navigation_warning',
                 formats: [:js],
                 handlers: [:erb] %>
      <%= form_with model: @user, scope: :user, local: true do |f| %>
        <div class='inline-labels'>
          <%= f.label :user_name, User.human_attribute_name(:user_name) %>
          <%= f.text_field :user_name %>

          <%= f.label :last_name, User.human_attribute_name(:last_name) %>
          <%= f.text_field :last_name %>

          <%= f.label :first_name, User.human_attribute_name(:first_name) %>
          <%= f.text_field :first_name %>

          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email %>
        </div>

        <%= f.hidden_field :id %>

        <%= f.fields_for :grader_permission do |ff| %>
          <h3><%=t('grader_permissions.list')%></h3>
          <div class="tooltip">
            <span class="tooltip tooltiptext"><%= t('grader_permissions.manage_assessments_tooltip') %></span>
            <%= ff.check_box :manage_assessments %>
            <%= ff.label :manage_assessments, t('grader_permissions.manage_assessments') %><br/>
          </div><br/>
          <div class="tooltip">
            <span class="tooltip tooltiptext"><%= t('grader_permissions.manage_submissions_tooltip') %></span>
            <%= ff.check_box :manage_submissions %>
            <%= ff.label :manage_submissions, t('grader_permissions.manage_submissions') %>
          </div><br/>
          <div class="tooltip">
            <span class="tooltip tooltiptext"><%= t('grader_permissions.run_tests_tooltip') %></span>
            <%= ff.check_box :run_tests %>
            <%= ff.label :run_tests, t('grader_permissions.run_tests') %>
          </div>
        <% end %>
        <p>
          <%= f.submit t(:save),
                       name: 'submit',
                       data: { disable_with: t('working') } %>
          <%= link_to t(:cancel),
                      { controller: controller },
                      class: 'button' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
