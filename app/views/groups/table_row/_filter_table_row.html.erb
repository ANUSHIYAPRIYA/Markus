<td>
<span class="link"><%= h(grouping.group.group_name)%></span>
    <span class="table_menu">
	<%= link_to_remote I18n.t('groups.rename_group.link'),
	:url => { :action => 'rename_group_dialog', :id => assignment.id, :grouping_id => grouping.id } %>
    |
    <% if !grouping.is_valid? %>
      <%= link_to_remote I18n.t('validate'), :url => { :action =>
    'valid_grouping', :id => assignment.id, :grouping_id =>
    grouping.id},
    :html => {:class => 'valid', :title => I18n.t('groups.validate')},
    :confirm =>  I18n.t('groups.validate_confirm') %>
     |
    <% end %>
    <%= link_to_remote I18n.t('delete'), :method => 'delete',
    :url => { :action => 'remove_group', :id => assignment.id, :grouping_id => grouping.id }, 
    :html => { :class => 'delete', :title => I18n.t('groups.delete') },
    :confirm =>  I18n.t('groups.delete_confirm')  %>
    |
	<%= link_to_remote I18n.t('add_members'),
	:url => { :action => 'add_member_dialog', :id => assignment.id, :grouping_id => grouping.id } %>
	|
	<%= link_to_remote I18n.t('notes.title') + "(<span id=\"num_notes_#{grouping.id}\">#{grouping.notes.size}</span>)", 
	:url => { :controller => 'note' , :action => 'notes_dialog', :id => assignment.id, :noteable_id => grouping.id, :noteable_type => 'Grouping' , :action_to => 'note_message', :controller_to => 'groups', :number_of_notes_field => "num_notes_#{grouping.id}", :highlight_field => "notes_highlight_#{grouping.id}"}, :html => {:id => "notes_highlight_#{grouping.id}"} %>
    </span>
</td>

<td>
<% grouping.student_memberships.each do |member| %> 
   <%= render :partial => "groups/manage/member", 
      :locals => {:member => member, :grouping => grouping } %>
<% end -%>
</td>

<td>
<% grouping.ta_memberships.each do |ta| %> 
  <%= ta.user.user_name%>
<% end -%>
</td>

<td>
<% if grouping.is_valid?%>
<%= image_tag "icons/tick.png",
   :title => I18n.t('groups.is_valid')
%>
<% else %>
<%= image_tag "icons/cross.png",
   :title => I18n.t('groups.is_not_valid')%>

<% end %>
</td>
